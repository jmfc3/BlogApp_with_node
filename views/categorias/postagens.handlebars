<h2>Postagens sobre {{categoria.nome}}</h2>

{{#each postagens}}
<div class="card mt-4">
    <div class="card-body">
       
        <h3>{{titulo}}</h3>
        <p>{{descricao}}</p>
        <a href="/postagem/{{slug}}">
            <button class="btn btn-info">Leia mais</button>
        </a>
        <hr> 
        <small>categoria: {{categoria.nome}}</small>
        <br>
        <small>Data de publicação: {{data}}</small>
    </div>
</div>
{{else}}
    <h5>Nenhuma postagem na base de dados</h5>
{{/each}}
