{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<div class="card">
    <div class="card-body">
        <h4>Editar postagem</h4>
        <form action="/admin/postagens/edit" method="POST">
            <input type="hidden" value="{{postagem._id}}" name="id">
            <label for="titulo">Título</label>
            <input type="text" name="titulo" class="form-control" required value="{{postagem.titulo}}">

            <label for="slug">Slug: </label>
            <input type="text" name="slug" class="form-control" required value="{{postagem.slug}}">

            <label for="descricao">Descrição: </label>
            <input type="text" name="descricao" class="form-control" required value="{{postagem.descricao}}">

            <label for="conteudo">Conteúdo</label>
            <textarea name="conteudo" class="form-control" required>{{postagem.conteudo}}</textarea>

            <label for="categoria">Categorias:</label>
            <select name="categoria" class="custom-select">
                <option value="0">Selecione uma opção</option>
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option>Nenhuma categorias registada</option>
                {{/each}}
            </select>

            <button class="btn btn-success mt-2" type="submit">Editar postagem</button>
        </form>
    </div>
</div>